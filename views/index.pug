//- extends layout
//- block content
doctype html
html
    head
        style
            include style.css
        script(src="https://code.jquery.com/jquery-1.12.0.min.js")
        script(src='scoreboard.js')
    body
        h1 Team Scores
        div(id="testDiv")
        table(class="scoreTable")
            tbody
                tr(class="teamRow")
                    each team,teamname in teamdata
                        td
                            div(class="teamAvatar")
                                img(src=""+team.LogoSrc)
                                span(class="caption")
                                    =teamname
                                h2(class="CurrentPts")=team.CurrentPts

